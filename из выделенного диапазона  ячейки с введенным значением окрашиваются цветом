
Sub Colour()
your_value = InputBox("input your value")

Dim myRange As Range
Set myRange = Selection

Dim i As Integer
Dim max_i As Integer
max_i = myRange.Columns.Count * myRange.Rows.Count
For i = 0 To max_i
    If CStr(myRange(i).Value) = CStr(your_value) Then
        myRange(i).Interior.Color = RGB(100, 150, 200)
    End If
Next
MsgBox ("Done!")
End Sub
